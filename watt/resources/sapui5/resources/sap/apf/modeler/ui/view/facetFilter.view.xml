<mvc:View controllerName="sap.apf.modeler.ui.controller.facetFilter"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<VBox xmlns="sap.m" id="idFacetFilterform" visible="true" width="100%"
		displayInline="false" direction="Column" fitContainer="false"
		renderType="Div" justifyContent="Start" alignItems="Stretch">
		<items>
			<ScrollContainer vertical="true">
				<f:SimpleForm maxContainerCols="1" editable="false"
					labelMinWidth="300" layout="ResponsiveGridLayout" labelSpanL="4"
					labelSpanM="4" labelSpanS="4" emptySpanL="2" emptySpanM="2"
					emptySpanS="2" columnsL="1" columnsM="1">
					<f:content>

						<ObjectHeader id="idFacetFilterBasicData" condensed="true">
							<layoutData>
								<l:GridData span="L12 M12 S12" />
							</layoutData>
						</ObjectHeader>

						<!-- FACET FILTER TITLE -->

						<Label xmlns="sap.m" id="idFfPropertyLabel" width="100%" />
						<ComboBox xmlns="sap.m" id="idffProperty" visible="true"
							width="100%" change="handleChangeForProperty" items="{/Properties}">
							<core:Item key="{propertyKey}" text="{propertyName}" />
						</ComboBox>
						<Label xmlns="sap.m" id="idFfLabel" width="100%" />
						<Input xmlns="sap.m" id="idLabel" editable="true"
							change="handleChangeForLabel" />
						<Label xmlns="sap.m" id="idFfAliasLabel" width="100%" />
						<ComboBox xmlns="sap.m" id="idAlias" visible="true"
							width="100%" change="handleChangeForAlias" items="{/Properties}">
							<core:Item key="{propertyKey}" text="{propertyName}" />
						</ComboBox>
						<Label xmlns="sap.m" id="idSelectionModeLabel" width="100%" />

						<VBox xmlns="sap.m" id="idSelectionMode" visible="true"
							displayInline="false" direction="Column" fitContainer="true"
							renderType="Div" justifyContent="Start">
							<items>
								<RadioButton groupName="GroupA" id="single" text=""
									select="handleChangeForSelectionModeSingle" />
								<RadioButton groupName="GroupA" id="multi" text=""
									select="handleChangeForSelectionModeMulti" />
							</items>
						</VBox>

						<!-- FACET FILTER VALUE HELP -->
						<ObjectHeader id="idValueHelpTitle" condensed="true">
							<layoutData>
								<l:GridData span="L12 M12 S12" />
							</layoutData>
						</ObjectHeader>

						<Label xmlns="sap.m" id="idVhSourceLabel" width="100%" />
						<Input xmlns="sap.m" id="idVHSource" editable="true"
							change="handleChangeForVHSource" />
						<Label xmlns="sap.m" id="idVhEntityLabel" width="100%" />
						<Select xmlns="sap.m" id="idVHEntity" visible="true"
							enabled="true" width="100%" maxWidth="" type="Default"
							autoAdjustWidth="false" change="handleChangeForVHEntity" items="{/Entities}">
							<core:Item key="{entityKey}" text="{entityName}" />
						</Select>
						<Label xmlns="sap.m" id="idVhSelectPropertiesLabel" width="100%" />
						<MultiComboBox xmlns="sap.m" id="idVHSelectProperties"
							value="" width="" enabled="true" visible="true" valueState="None"
							name="" placeholder="" editable="true" maxWidth="" selectedItems=""
							change="" selectionChange="" selectionFinish="handleChangeForVHSelectProperties"
							items="{/Properties}">
							<core:Item key="{propertyKey}" text="{propertyName}" />
						</MultiComboBox>
						<Label xmlns="sap.m" id="idVhDefaultValueModeLabel" width="100%" />
						<Select xmlns="sap.m" id="idVHDefaultValueMode" visible="true"
							enabled="true" width="100%" type="Default" autoAdjustWidth="false"
							selectedItem="" change="handleChangeForDVMode" items="{/DVModes}">
							<core:Item key="{dvKey}" text="{dvName}" />
						</Select>
						<Label xmlns="sap.m" id="idVhDefaultValuesLabel" width="100%" 
						/>
						<Input xmlns="sap.m" id="idVHDefaultValues" editable="true"
							change="handleChangeForVHFixedValues" />
						<Label xmlns="sap.m" id="idVhFunctionLabel" width="100%" 
						/>
						<Input xmlns="sap.m" id="idVHfunction" editable="true"
							change="handleChangeForPreselectionFunction" />

						<!-- FACET FILETR RESOLUTION REQUEST -->

						<ObjectHeader id="idFilterResolutionTitle" condensed="true">
							<layoutData>
								<l:GridData span="L12 M12 S12" />
							</layoutData>
						</ObjectHeader>
						<Label xmlns="sap.m" id="idVhCheckBoxLabel" width="100%" />
						<CheckBox xmlns="sap.m" id="idVhCheckBox" selected="false" width="0px"
							visible="true" enabled="true" activeHandling="true" select="handleChangeForVHCheckBox">

						</CheckBox>
						<Label xmlns="sap.m" id="idVhSourceLabel1" width="100%" />
						<Input xmlns="sap.m" id="idFRSource" editable="true"
							change="handleChangeForFRSource" />
						<Label xmlns="sap.m" id="idVhEntityLabel1" width="100%" />
						<Select xmlns="sap.m" id="idFREntity" visible="true"
							enabled="true" width="100%" maxWidth="100%" type="Default"
							autoAdjustWidth="false" selectedItem="" change="handleChangeForFREntity"
							items="{/Entities}">
							<core:Item key="{entityKey}" text="{entityName}" />
						</Select>
						<Label xmlns="sap.m" id="idVhSelectPropertiesLabel1" width="100%" />
						<MultiComboBox xmlns="sap.m" id="idFRSelectProperties"
							value="" width="" enabled="true" visible="true" valueState="None"
							name="" placeholder="" editable="true" maxWidth="" selectedItems=""
							change="" selectionChange="" selectionFinish="handleChangeForFRSelectProperties"
							items="{/Properties}">
							<core:Item key="{propertyKey}" text="{propertyName}" />
						</MultiComboBox>

					</f:content>
				</f:SimpleForm>
			</ScrollContainer>
		</items>
	</VBox>
</mvc:View>