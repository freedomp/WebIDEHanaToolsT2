<core:View controllerName="sap.watt.saptoolsets.fiori.problemsView.view.ProblemsView" xmlns:core="sap.ui.core" height="100%"
		   xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table" xmlns="sap.ui.commons" class="problemsViewContainer"
		   xmlns:layout="sap.ui.commons.layout"
		   xmlns:ux3="sap.ui.ux3">
	<table:Table id="problemsViewTable" minAutoRowCount="1" rows="{path: 'problemsModel>/problems' , sorter: [{path : 'problemsModel>location' , descending: false}, {path : 'problemsModel>file' , descending: false}] }" showNoData="false" selectionMode="None" visibleRowCountMode="Auto" filter="onTableFiltered"  >
		<table:toolbar>
			<Toolbar>
				<Button id="allProblemsTableFilter" press="filterAll" text="All (0)" class="problemsFilterBtnNotSelected" height="18px"></Button>
				<Button id="errorProblemsTableFilter" press="filterErrors" text="Errors (0)" class="problemsFilterBtnSelected" height="18px"></Button>
				<Button id="warningProblemsTableFilter" press="filterWarning" text="Warnings (0)" class="problemsFilterBtnNotSelected" height="18px"></Button>
				<Button id="infoProblemsTableFilter" press="filterInfo" text="Infos (0)" class="problemsFilterBtnNotSelected" height="18px"></Button>
				<ToolbarSeparator></ToolbarSeparator>
				<Button id="analyseProblems" press="analyseProblems" icon="sap-icon://refresh" class="analyseProblemsButton" height="18px" tooltip="{i18n>analtze_button}"></Button>
				<ToolbarSeparator></ToolbarSeparator>
				<TextView text="{ parts: [ {path: 'problemsModel>/title'}], formatter:'.getTitleText'}" class="problemsTitle"></TextView>
			</Toolbar>
		</table:toolbar>
		<table:columns>
			<table:Column id="severityIconsColumn" width="6%" hAlign="Center" sortProperty="severity" filterProperty="severity">
				<Label text="Severity">
				</Label>
				<table:template>
					<Image width="14px" height="14px" src="{path : 'problemsModel>severity',formatter:'sap.watt.common.plugin.problemsView.util.ProblemsViewUIFormatters.getProblemsIcon'}">
					</Image>
				</table:template>
			</table:Column>
			<table:Column width="50%" filterProperty="description" sortProperty="description">
				<Label text="{i18n>problem_description_label}">
				</Label>
				<table:template>
					<layout:HorizontalLayout>
						<Link target="_blank" text="{parts: ['problemsModel>checker', 'problemsModel>ruleId', 'problemsModel>description', 'problemsModel>helpUrl'], formatter:'.getHelpText'}" href="{problemsModel>helpUrl}" class="problemsDescriptionHelpUrl" visible="{=!!${problemsModel>helpUrl}}"></Link>
						<TextView text="{parts: ['problemsModel>checker', 'problemsModel>ruleId', 'problemsModel>description', 'problemsModel>helpUrl'], formatter:'.getDesciptionText'}">
						</TextView>
					</layout:HorizontalLayout>
				</table:template>
			</table:Column>
			<table:Column width="20%" filterProperty="file" sortProperty="file">
				<Label text="{i18n>problem_file_label}"/>
				<table:template>
					<Link press="onFileLinkPress" text="{problemsModel>file}"/>
				</table:template>
			</table:Column>
			<table:Column width="20%" filterProperty="location" sortProperty="location">
				<Label text="{i18n>problem_location_label}"/>
				<table:template>
					<TextView text="{problemsModel>location}"/>
				</table:template>
			</table:Column>
			<table:Column width="20%" filterProperty="category" sortProperty="category">
				<Label text="{i18n>problem_location_category}"/>
				<table:template>
					<TextView text="{problemsModel>category}"/>
				</table:template>
			</table:Column>
		</table:columns>
	</table:Table>
</core:View>
