{
    "name": "sap.hana.ide.editor.editors.xsjs",
    "description": "The XS Javascript Editor Plugin",
    "i18n" : "sap.hana.ide.editor.editors.xsjs/i18n/i18n.hdbtextbundle",
    "version": "0.6.0-SNAPSHOT",
    "scm-revision": "51fca7e06a400bbbd9207d20c9b35da441426560",

    "requires": {
        "services": [
            "layout",
            "perspective",
            "document",
            "editor",
            "commandGroup",
            "system",
            "command",
            "content",
            "menuBar",
            "selection",
            "log",
            "console",
            "focus",
            "repositorybrowser",
            "filesystem.documentProvider",
            "aceeditor",
            "intellisence",
            "jscodecompletion",
            "outlinePane",
            "jsOutline",
            "jsdefinition",
            "snippet"
          ]
    },

    "configures": {

        "services": {

        	"aceeditor:editorContextMenu":[
                {
                    "extension" : "xsjs",
                    "menuGroup" : "jsContextMenu"
                }
        	],

            "aceeditor:editorGutterContextMenu":[
            	{
                    "extension" : "xsjs",
                    "menuGroup" : "jsGutterContextMenu"
                }
            ],

            "jsdefinition:supportedFileExtensions" : ["xsjs"],
            "jsOutline:supportedFileExtensions" : ["xsjs"],

            "intellisence:codeCompletion": [{
                "fileExtension": "xsjs",
                "service": "@jscodecompletion",
                "editor": "aceeditor"
            }],

            "snippet:snippets" : [{
            	"fileExtension" : "xsjs",
                "snippets" : [{
                	"id" : "xsjs",
                	"filePath" : "sap.hana.ide.editor.editors.xsjs/snippet/xsjs.basic.txt",
                    "title" : "{i18n>requestHandling_xmsg}"
                }]
            }]

        }

    },

    "subscribes": {

    }

}