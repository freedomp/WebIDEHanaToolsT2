    			{
    			    "name": "oConfiguration",
    			    "type": "string"
    			},
    			{
    				"name": "oDocument",
    				"type": "object"
    			},
    			{
    				"name": "aValidationRules",
    				"type": "[object]"
    			}],
    			"returns": {
    				"type": "boolean",
    				"description": "Configuration state, valid or not"
    			}    
