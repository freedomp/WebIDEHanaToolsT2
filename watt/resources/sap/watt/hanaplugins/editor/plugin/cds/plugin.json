{
	"name": "sap.watt.hanaplugins.editor.plugin.cds",
	"description": "cds graphical editor",
	"i18n": "sap.watt.hanaplugins.editor.plugin.cds/i18n/messageBundle.hdbtextbundle",

	"requires": {
		"services": [
            "content",
            "selection",
            "editor",
            "document",
            "resource",
            "command",
            "commandGroup",
            "aceeditor",
			"repositorybrowser",
            "focus",
            "cdseditor",
	    "repositorybrowserUtils"
          
        ]
	},
	"provides": {
		"services": {
			"cdseditor": {
				"implements": "sap.watt.hanaplugins.editor.plugin.cds.interface.CDSEditor",
				"module": "sap/watt/hanaplugins/editor/plugin/cds/service/CDSEditor"
			}
		},
		"interfaces": {

			"sap.watt.hanaplugins.editor.plugin.cds.interface.CDSEditor": "sap/watt/hanaplugins/editor/plugin/cds/service/CDSEditor"
		}
	},
	"configures": {

		"services": {
			"cdseditor:styles": [{
				"uri": "sap/watt/hanaplugins/editor/plugin/cds/css/cdseditor.css"
            }],
			"editor:editors": [{
				"fileExtension": [
                    "hdbcds"
                ],
				"service": "@cdseditor",
				"name": "{i18n>tit_cds_editor}",
				"id": "cdseditor"
            }, {
				"fileExtension": [
                    "hdbcds"
                ],
				"service": "@aceeditor",
				"name": "{i18n>tit_cds_editor_text}",
				"id": "cdseditor_ace"
            }],

			"command:commands": [{
				"id": "cdseditor.create",
				"service": "sap.watt.hanaplugins.editor.plugin.cds/service/NewCDSFileService",
				"label": "{i18n>tit_cds_file}"
            }],

			"commandGroup:items": [{
				"parent": "file.new",
				"command": "cdseditor.create",
				"prio": 4
            }]

		}
	}
}