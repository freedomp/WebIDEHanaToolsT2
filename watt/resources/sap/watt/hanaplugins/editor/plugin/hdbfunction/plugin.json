{
    "name": "sap.watt.hana.editor.hdbfunction",
    "description": "The hdbfunction Editor Plugin",
    "module": "sap.watt.hana.editor.hdbfunction/Plugin",
    "i18n": "sap.watt.hana.editor.hdbfunction/i18n/i18n.hdbtextbundle",

    "requires": {
        "services": [
            "layout",
            "perspective",
            "document",
            "editor",
            "commandGroup",
            "system",
            "command",
            "content",
            "menuBar",
            "selection",
            "log",
            "console",
            "focus",
            "repositorybrowser",
            "filesystem.documentProvider",
            "aceeditor",
            "usernotification",
            "repositorybrowserUtils",
            "projectType"
        ]
    },

    "configures": {
        "services": {

            "command:commands": [{
                "id": "HdbFunction.create",
                "service": "sap.watt.hana.editor.hdbfunction/command/CreateHdbFunctionFile",
                "label": "{i18n>command_create_hdb_function}"
            }],


            "commandGroup:items": [{
                "parent": "file.new",
                "command": "HdbFunction.create",
                "prio": 2
            }]
        }
    },

    "subscribes": {
        "core:started": "initialize",
        "selection:changed": "onSelectionChange",
        "aceeditor:opened": "onOpened"
    }

}