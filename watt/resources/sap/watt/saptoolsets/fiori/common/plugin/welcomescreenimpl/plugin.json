{  
   "name":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl",
   "description":"An implementation for the welcome screen of Web IDE",
   "i18n":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/i18n/i18n",
   "requires":{  
      "services":[  
         "WelcomeScreenManager",
         "command",
         "system",
         "Version",
         "perspective",
         "WelcomeScreenPersistency",
         "import",
         "hcpconnectivity",
         "usagemonitoring"
      ]
   },
   "configures":{  
      "services":{  
         "WelcomeScreenManager:containers":[  
            {  
               "id":"welcomeContainer",
               "container":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/ui/WelcomeContainer",
               "section":"welcomeMainSection",
               "priority":0
            },
            {
               "id":"videoContainer",
               "container":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/ui/VideoContainer",
               "section":"welcomeSubSection",
               "priority":0
            },
            {  
               "id":"newProjectContainer",
               "container":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/ui/NewProjectContainer",
               "section":"welcomeMainSection",
               "priority":10
            },
            {  
               "id":"importContainer",
               "container":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/ui/ImportContainer",
               "section":"welcomeMainSection",
               "priority":20
            },
            {  
               "id":"toolsContainer",
               "container":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/ui/ToolsContainer",
               "section":"welcomeSubSection",
               "priority":10
            }
         ],
         "command:commands":[  
            {  
               "id":"welcomepage.import",
               "label":"{i18n>command_importarchive}",
               "type":"action",
               "service":"sap.watt.saptoolsets.fiori.common.welcomescreenimpl/command/ImportFromWelcomePage",
               "available" : true,
               "enabled" : true
            }
         ],
         "usagemonitoring:reportParams": [
            {
               "components": [
                  "welcome_screen"
               ],
               "eventTypes": [
                  "quickStart",
                  "project_template",
                  "project_sample_application",
                  "extension_project",
                  "import_archive",
                  "import_ABAP",
                  "import_HCP",
                  "import_clone_GIT",
                  "video_link",
                  "welcomeContainer_newVersionLink",
                  "toolsContainer_cockpitLink",
                  "toolsContainer_themeDesignerLink",
                  "toolsContainer_documentationLink",
                  "toolsContainer_sapUILink",
                  "toolsContainer_hanaAcademyLink",
                  "toolsContainer_fioriLink",
                  "toolsContainer_scnLink",
                  "toolsContainer_forumLink",
                  "toolsContainer_developerCenterLink"
               ]
            }
         ]

      }
   }
}