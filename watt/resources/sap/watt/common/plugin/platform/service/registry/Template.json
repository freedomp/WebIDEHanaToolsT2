{
	"name": "sap.watt.common.service.registry.Template",
	"description": "The template registry service interface",
	"configurationProperties": {
		"templates": {
			"type": {
				"id": {
					"type": "string"
				},
				"template": {
					"type": "sap.watt.common.service.template.Template"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"path": {
					"type": "string"
				},
				"fileName": {
					"type": "string"
				},
				"requiredTemplates": {
					"type": "[object]"
				},
				"modelFileName": {
					"type": "string"
				},
				"modelRoot": {
					"type": "string"
				},
				"icon": {
					"type": "string"
				},
				"category": {
					"type": "[string]"
				},
				"templateType": {
					"type": "string"
				},
				"supportedProjectTypes" : {
					"type" : "[string]"
				},
				"targetProjectTypes" : {
					"type" : "[string]"
				},
				"additionalData": {
					"type": "[object]"
				},
				"orderPriority": {
					"type": "number",
					"description": "The priority of the template. Sets the order of displayed templates"
				},
				"coreTemplate": {
					"type": "boolean",
					"description": "Determines if the template is core or external development template"
				},
				"wizardSteps": {
					"type": "[string]"
				},
				"requiresNeoApp": {
					"type": "boolean"
				},
				"internalOnly": {
					"type": "boolean"
				},
				"version": {
					"type": "string"
				},
				"versionLabel": {
					"type": "string"
				},
				"previewImage": {
					"type": "string"
				},
				"requiredModules": {
					"type": "[string]",
					"description": "A list of UI5 module paths that will be loaded prior to generation"
				},
				"beautifyFiles": {
					"type": "boolean",
					"description": "Determines if the resources will go through beautification process"
				}

			},
			"multiple": true
		},
		"categories": {
			"type": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				}
			},
			"multiple": true
		}
	},
	"methods": {
		"getTemplatesPerCategories": {
			"description": "Retrieve all the categories",
			"params": [{
				"name": "templateType",
				"type": "string",
				"description": "The type of templates to retrieve ('project' or 'component')"
			},{
				"name": "bIncludesFavoriteCategory",
				"type": "boolean",
				"optional": true,
				"description": "If return or not Favorite Category"
			}],
			"returns": "[object]"
		},

		"getTemplates": {
			"description": "Retrieve all the registered templates",
			"params": [{
				"name": "sTemplateType",
				"type": "string",
				"description": "The type of templates to retrieve ('project' or 'component')",
				"optional": true
			}],
			"returns": "object"
		},

		"getAllRequiredTemplates": {
			"description": "Retrieve all the templates that are required by a given template",
			"params": [{
				"name": "oTemplate",
				"type": "object",
				"description": "The template to find which other templates it requires"
			}],
			"returns": "[object]"
		},

		"getTemplate": {
			"description": "Get the settings of a template with the given id",
			"params": [{
				"name": "sTemplate",
				"type": "string",
				"description": "The desired template id"
			}, {
				"name": "sVersion",
				"type": "string",
				"optional": true,
				"description": "The desired template version"
			}],
			"returns": "object"
		},

		"getTemplateVersions": {
			"description": "Get the template versions of a template with the given name",
			"params": [{
				"name": "sTemplate",
				"type": "string",
				"description": "The desired template id"
			}],
			"returns": "[object]"
		},

		"getCategories": {
			"description": "Get all registered Categories which are not empty",
			"returns": "[object]"
		},

		"getRegisteredCategories": {
			"description": "Get all registered Categories",
			"returns": "object"
		},

		"getCategoryById": {
			"description": "Get the settings of a category with the given id",
			"params": [{
				"name": "sCategoryId",
				"type": "string",
				"description": "The desired category id"
			}],
			"returns": "object"
		}

	}
}