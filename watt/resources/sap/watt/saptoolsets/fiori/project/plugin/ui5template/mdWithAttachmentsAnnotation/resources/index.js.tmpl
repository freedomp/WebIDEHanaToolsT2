	//TODO: If you are using SMP, enter the necessary data below

	{{~#if smpOffline}}

	smpInfo : {
	    appID: "{{smpApplicationId}}",
	    server: "{{smpServer}}",
	    port: "{{smpPort}}"
	},
	{{~else}}

	smpInfo : {
	    appID: "",
	    server: "",
	    port: ""
	},
	{{~/if}}
	
	
	
    //Application Constructor
    initialize : function() {
        this.bindEvents();
    },

	//========================================================================
	// Bind Event Listeners
	//========================================================================
     bindEvents : function() {
        //add an event listener for the Cordova deviceReady event.
        document.addEventListener("deviceready", this.onDeviceReady, false);
    },

	
    //========================================================================
    //Cordova Device Ready
    //========================================================================
    onDeviceReady : function() {
		console.log("Entering onDeviceReady");
		
	{{~#if smpOffline}}

		if (devapp.smpInfo.server && devapp.smpInfo.server.length > 0) {
			doLogonInit(devapp);
		}
		
		//TODO: To use online mode without SMP: 
		//	1) Comment the lines above.
		//	2) Uncomment the line below.
		// startApp();
		 
		//TODO: To use SMP in online mode: 
		//	1) You must verify the server, port, and appID in the smpInfo section above are set.

	{{~else}}
		startApp();
		//TODO: To use SMP: 
		//	1) Comment the line above.
