<core:FragmentDefinition xmlns:appDescriptorUI="sap.watt.saptoolsets.fiori.editor.plugin.appdescriptoreditor.ui" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns:tab="sap.ui.Table" xmlns:unified="sap.ui.unified" xmlns="sap.ui.commons">
	<Dialog accessibleRole="Dialog" applyContentPadding="true" closed="onDefaultDialogClose" keepInWindow="false" modal="true" resizable="false"
		showCloseButton="true" title="{/title}" xmlns="sap.ui.commons">
		<buttons>
			<Button enabled="{/bOKEnabled}" press="onDefaultDialogOK" text="{i18n>AppDescriptor_OK}"></Button>
			<Button press="onDefaultDialogCancel" text="{i18n>AppDescriptor_Cancel}"></Button>
		</buttons>
		<content>
			<layout:Grid vSpacing="0">
				<layout:content>
					<Label text="{/data/comboBoxLabel}" visible="{ path:'/bSingleValue', formatter: '.formatAddRemoveCombo'}" xmlns="sap.ui.commons">
						<layoutData>
							<layout:GridData span="L4 M6 S6"></layout:GridData>
						</layoutData>
					</Label>
					<ComboBox change="onComboTypeChange" id="appDescriptorListWithAddRemoveCombo" items="{/data/types}"
						visible="{ path:'/bSingleValue', formatter: '.formatAddRemoveCombo'}" width="100%">
						<items>
							<core:ListItem key="{type}" text="{type}"></core:ListItem>
						</items>
						<layoutData>
							<layout:GridData span="L8 M6 S6"></layout:GridData>
						</layoutData>
					</ComboBox>
					<RowRepeater class="sapIDEListBoxWithAddRemoveSpacing" design="Transparent" id="appDescriptorRowRepeater" numberOfRows="7" rows="{fields}" >
						<rows>
							<layout:Grid vSpacing="1">
								<Label required="{required}" text="{name}" visible="{labelVisible}">
									<layoutData>
										<layout:GridData span="L4 M6 S6"></layout:GridData>
									</layoutData>
								</Label>
								<TextField change="onDialogTextFieldChange" placeholder="{placeholder}" value="{value}" valueState="{valueState}" visible="{visible}">
									<layoutData>
										<layout:GridData span="L8 M6 S6"></layout:GridData>
									</layoutData>
								</TextField>
							</layout:Grid>
						</rows>
						<noData>
							<Label text="">
								<layoutData>
									<layout:GridData span="L12 M12 S12"></layout:GridData>
								</layoutData>
							</Label>
						</noData>
						<layoutData>
							<layout:GridData span="L12 M12 S12"></layout:GridData>
						</layoutData>
					</RowRepeater>
				</layout:content>
				<layout:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</layout:layoutData>
			</layout:Grid>
		</content>
	</Dialog>
</core:FragmentDefinition>