{

    "name": "sap.watt.ideplatform.intellisence",
    "description": "The intellisence Plugin.",
    "i18n" : "sap.watt.ideplatform.intellisence/i18n/i18n",
		
    "requires": {
		"services": [
			"command",
			"commandGroup",
			"content",
			"log",
			"translation",			
			"perspective",
			"resource",
			"selection",
			"usernotification",
			"userpreference",
			"appmetadata",
			"usagemonitoring"
		]
	},

    "provides": { 
        "services": {            
			"intellisence":{
			    "implements": "sap.watt.common.plugin.intellisence.service.Intellisence",
                "module": "sap.watt.ideplatform.intellisence/service/IntellisenceImpl"
			},
			"intellisence.guidance": {
				"implements": "sap.watt.common.plugin.intellisence.service.Guidance",
				"module" : "sap.watt.ideplatform.intellisence/service/Guidance"
			},
			"intellisence.config": {
				"implements": "sap.watt.common.plugin.intellisence.service.Config",
				"module" : "sap.watt.ideplatform.intellisence/service/Config"
			},
			"intellisence.libversion": {
			    "implements": "sap.watt.common.plugin.intellisence.service.LibraryVersion",
				"module" : "sap.watt.ideplatform.intellisence/service/LibraryVersion"
			}
			,
			"intellisence.calculatelibraryversion": {
			    "implements": "sap.watt.common.plugin.intellisence.service.CalculateLibraryVersion",
				"module" : "sap.watt.ideplatform.intellisence/service/CalculateLibraryVersion"
			},
			"intellisence.libmetadataprovider": {
			    "implements": "sap.watt.common.plugin.intellisence.service.LibraryMetadataProvider",
			    "module": "sap.watt.ideplatform.intellisence/service/LibraryMetadataProviderImpl"
			}
        },
        
		"interfaces": {
			"sap.watt.common.plugin.intellisence.service.Intellisence": "sap.watt.ideplatform.intellisence/service/Intellisence",
			"sap.watt.common.plugin.intellisence.service.Guidance": "sap.watt.ideplatform.intellisence/service/Guidance",
			"sap.watt.common.plugin.intellisence.service.Config": "sap.watt.ideplatform.intellisence/service/Config",
			"sap.watt.common.plugin.intellisence.service.LibraryVersion": "sap.watt.ideplatform.intellisence/service/LibraryVersion",
			"sap.watt.common.plugin.intellisence.service.CalculateLibraryVersion" :"sap.watt.ideplatform.intellisence/service/CalculateLibraryVersion",
			"sap.watt.common.plugin.intellisence.service.LibraryMetadataProvider" :"sap.watt.ideplatform.intellisence/service/LibraryMetadataProvider",
			"sap.watt.common.plugin.intellisence.service.SDKVersion" : "sap.watt.ideplatform.intellisence/service/SDKVersion"
		}
		
    },

	"configures" : {
		"services": {
			"usagemonitoring:reportParams": [{
				"components": ["editor"],
				"eventTypes": ["get_completion_content"]
			}],

			"intellisence:styles" : [
				{
					"uri" : "sap.watt.ideplatform.intellisence/css/intellisence.css"
				}
			],
			
			"intellisence.guidance:styles" : [
				{
					"uri" : "sap.watt.ideplatform.intellisence/css/guidance.css"
				}
			],
			"intellisence.config:styles" : [
				{
					"uri" : "sap.watt.ideplatform.intellisence/css/intellisencesetting.css"
				}
			],
			
			"intellisence:helpWebsite": "https://sapui5.hana.ondemand.com/sdk/#docs/api/symbols/",
			"intellisence:hintLevel": 2,
			"intellisence:iconRoot": "resources/sap/watt/ideplatform/plugin/intellisence/images/",
			"intellisence:categoryIcon": [
				{
					"type":"0",
					"path":"namespace1.png",
					"pathSelected":"namespace1_white.png"
				},
				{
					"type":"1",
					"path":"type.png",
					"pathSelected":"type_white.png"
				},
				{
					"type":"2",
					"path":"property.png",
					"pathSelected":"property_white.png"
				},
				{
					"type":"3",
					"path":"event.png",
					"pathSelected":"event_white.png"
				},
				{
					"type":"5",
					"path":"element.png",
					"pathSelected":"element_white.png"
				},
				{
					"type":"6",  
					"path":"snippet1.png",
					"pathSelected":"snippet1_white.png"
				},
				{
					"type":"11",
					"path":"property.png",
					"pathSelected":"property_white.png"
				},
				{
					"type":"12",
					"path":"boolean.png",
					"pathSelected":"boolean_white.png"
				},
				{
					"type":"13",
					"path":"enum.png",
					"pathSelected":"enum_white.png"
				},
				{
					"type":"namespace",
					"path":"namespace1.png",
					"pathSelected":"namespace1_white.png"
				},
				{
					"type":"class",
					"path":"type.png",
					"pathSelected":"type_white.png"
				},
				{
					"type":"static class",
					"path":"static_type.png",
					"pathSelected":"static_type_white.png"
				},
				{
					"type":"function",
					"path":"function.png",
					"pathSelected":"function_white.png"
				},
				{
					"type":"property",
					"path":"variable.png",
					"pathSelected":"variable_white.png"
				},
				{
					"type":"object",
					"path":"variable.png",
					"pathSelected":"variable_white.png"
				},
				{
					"type":"template",
					"path":"snippet1.png",
					"pathSelected":"snippet1_white.png"
				},
				{
					"type":"keyword",
					"path":"snippet1.png",
					"pathSelected":"snippet1_white.png"
				}							
			],
			
			"command:commands": [
				{
					"id":"intellisence",
					"service":"sap.watt.ideplatform.intellisence/command/Intellisence",
					"keyBinding":"ctrl+space"
				},
				{
					"id" : "intellisence.guidance.show",
					"label": "{i18n>command_api}",
					"keyBinding":"mod+shift+a",
					"service": {
						"implements" : "sap.watt.common.service.ide.AbstractUIPartToggler",
						"module" : "sap.watt.common.perspective/command/AbstractUIPartToggler",
						"configuration" : { "id" : "intellisence.guidance.show", "service" : "@intellisence.guidance", "perspective" : "development"}
					},
					"icon" : "api_reference",
					"available" : true
				}
			],

			
			"commandGroup:items" : [
				{
                    "parent": "view.otherPanes",
                    "command": "intellisence.guidance.show",
                    "prio": "10"
                }
			],
			
			"perspective:views": [				
				{ "id": "intellisence.guidance", "service": "@intellisence.guidance", "area": "right", "visible": "false", "cssclass": "filesearch splitterContainer" }
			],
			
			"intellisence.config:preferenceService" : {
				"service" : "@preferences",
				"node" : "sap.watt.common.plugin.intellisence"
			},		

			"userpreference:plugins" : [
				{
					"id": "intellisence",
					"name" : "{i18n>code_Completion_Title}",
					"title" : "{i18n>code_Completion_Title}",
					"description" : "{i18n>code_Completion_Description}",
					"service": "@intellisence.config"
				}
			]			
		}
	},
	"subscribes": {								
		"perspective:splitterPositionChanged" :"intellisence:onSplitterPositionChanged",
		"translation:translated":"intellisence.guidance:onTermTranslated",		
		"selection:changed":"intellisence:onSelectionChanged",
		"intellisence:helpTipShown":"intellisence.guidance:onHelpTipShown"				
	}
	
}