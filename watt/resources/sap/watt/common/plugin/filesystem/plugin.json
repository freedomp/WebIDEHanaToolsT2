{
	"name": "sap.watt.common.filesystem",
	"description": "The filesystem Plugin",
	
	"requires": {
		"services": [
			"document"
		]
	},
	
	"provides": {
		"services": {
			"filesystem.documentProvider": {
				"implements": "sap.watt.common.plugin.filesystem.service.FilesystemDocumentProvider",
				"module":  "sap.watt.common.filesystem/service/FilesystemDocumentProvider"
			},
			"filesystem.jsonProvider": {
				"implements": "sap.watt.common.plugin.filesystem.service.FilesystemJsonProvider",
				"module":  "sap.watt.common.filesystem/service/FilesystemJsonProvider"
			}
		},
		
		"interfaces": {
			"sap.watt.common.plugin.filesystem.service.FilesystemDocumentProvider": "sap.watt.common.filesystem/service/FilesystemDocumentProvider",
			"sap.watt.common.plugin.filesystem.service.FilesystemJsonProvider": "sap.watt.common.filesystem/service/FilesystemJsonProvider"
		}
	},
	
	"configures": {
		"services": {
			"document:providers":[{
				"type" : "file",
				"documentProvider" : "@filesystem.documentProvider"
			},{
				"type" : "folder",
				"documentProvider" : "@filesystem.documentProvider"
			}]
		}
	}
}