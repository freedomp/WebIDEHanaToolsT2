{
    "name": "sap.hana.cst.common.sqlparser",
    "description": "The SQL Parser",
    "i18n": "sap.hana.cst.common.sqlparser/../../lib/sqlparser/parser/messages",

    "requires": {
        "services": [
            "log",
            "command",
            "selection",
            "content"
        ]
    },

    "provides": {
        "services": {
            "sqlparser": {
                "implements": "sap.hana.cst.common.sqlparser.interface.SqlParser",
                "module": "sap.hana.cst.common.sqlparser/service/SqlParserImpl"
            }
        },

        "interfaces": {
            "sap.hana.cst.common.sqlparser.interface.SqlParser": "sap.hana.cst.common.sqlparser/service/SqlParserImpl"
        }
    },

    "configures": {
        "services": {
            "log:targets": [{
                "name": "sql",
                "service": {
                    "module": "sap.watt.platform.log/service/Log",
                    "configuration": {
                        "bufferSize": "500",
                        "logLevel": "info"
                    }
                }
            }],
            "command:commands": [{
				"id": "sqlparser.formatSqlCode",
				"label": "Format Code",
				"type": "action",
				"icon": "/sap/hana/cst/common/images/format.gif",
				"keyBinding": "mod+b",
				"service": "sap.hana.cst.common.sqlparser/command/FormatSql"
            }]
        }
    },

    "subscribes": {
        "document:changed" : "sqlparser:onDocumentChanged"
    }
}