{
	"name": "sap.watt.common.plugin.progress.service.DialogProgress",
	"extends": [
		"sap.watt.common.service.ui.Part"
	],
	"description": "The Dialog Progress Service",
	"methods": {
		"show": {
			"descriptions": "Shows the progress dialog with the given text",
			"params": [
				{
					"name": "sMessage",
					"type": "string",
					"optional": true
				},
				{
					"name": "bOnlyOverlay",
					"type": "boolean",
					"optional": true
				}
			]
		},
		"setProgress": {
			"descriptions": "Updates the progress dialog using the given value and text",
			"params": [
				{
					"name": "iValue",
					"type": "number",
					"optional": true
				},
				{
					"name": "sMessage",
					"type": "string",
					"optional": true
				}
			]
		},
		"hide": {
			"descriptions": "Hides the progress dialog"
		}
	}
}