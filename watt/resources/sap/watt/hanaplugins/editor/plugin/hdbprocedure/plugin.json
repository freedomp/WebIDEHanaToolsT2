            "command:commands": [{
                "id": "editor.dynamic.insertHDBProcedureSnippet",
                "service": "sap.watt.hana.editor.hdbprocedure/command/InsertSnippet",
                "label": "Insert snippet",
                "icon": "template.gif"
            }, {
                "id": "HdbProcedure.create",
                "service": "sap.watt.hana.editor.hdbprocedure/command/CreateHdbProcedureFile",
                "label": "{i18n>command_create}"
            }, {
                "id": "editor.dynamic.invokeProcedure",
                "service": "sap.watt.hana.editor.hdbprocedure/command/InvokeProcedure",
                "label": "{i18n>command_invoke_procedure}",
                "icon": "CallProcedure.png"
            }, {
                "id": "editor.dynamic.invokeProcedureWithUI",
                "service": "sap.watt.hana.editor.hdbprocedure/command/InvokeProcedureWithUI",
                "label": "{i18n>command_invoke_procedure_with_ui}",
                "icon": "CallProcedure.png"
            }],

            "aceeditor:editorContextMenu": [{
                "extension": "hdbprocedure",
                "menuGroup": "hdbprocedureContextMenu"
            }],

            "commandGroup:groups": [{
                "id": "procedure.invocation"
            }, {
                "id": "hdbprocedureContextMenu"
            }, {
                "id": "hdbprocedureGutterContextMenu"
            }],

            "commandGroup:items": [{
                "parent": "file.new",
                "command": "HdbProcedure.create",
                "prio": 0
            }, {
                "parent": "hdbprocedureContextMenu",
                "group": "editor.undoRedo",
                "type": "inline",
                "prio": 30
            }]
        }
