{
	"name": "sap.xs.nodejs.project",
	"module": "sap.xs.nodejs.project/Plugin",
	"description": "Provides Node.js project support to XS",
	"i18n": "sap.xs.nodejs.project/i18n/i18n",
	"version": "0.6.0-SNAPSHOT",
	"scm-revision": "51fca7e06a400bbbd9207d20c9b35da441426560",

	"requires": {
		"services": [
			"aceeditor",
			"basechoosefilepopup",
			"baseerrorhandler",
			"basefilesearchutil",
			"baseinputvalidatorutil",
			"baserunconfigui",
			"buildRegistry",
			"builder",
			"chebackend.run",
			"command",
			"commandGroup",
			"content",
			"contextMenu",
			"document",
			"editor",
			"filesystem.documentProvider",
			"filesystem.jsonProvider",
			"log",
			"perspective",
			"preferences",
			"projectsetting",
			"repositorybrowser",
			"resource",
			"run",
			"runRegistry",
			"selection",
			"template",
			"templateCustomizationStep",
			"usernotification",
			"runconfig.filepath"
		]
	},
	"provides": {
		"services": {
			"nodejsRunnerApplication": {
				"implements": "sap.watt.common.plugin.run.service.runner",
				"module": "sap.xs.nodejs.project/service/runner/NodejsRunnerApplication"
			},
			"nodejsRunnerTest": {
				"implements": "sap.watt.common.plugin.run.service.runner",
				"module": "sap.xs.nodejs.project/service/runner/NodejsRunnerTest"
			},
			"uriUtil": {
				"implements": "sap.xs.nodejs.project.service.uriUtil",
				"module": "sap.xs.nodejs.project/service/UriUtil"
			},
			"nodejsLauncher": {
				"implements": "sap.xs.nodejs.project.service.NodejsLauncher",
				"module": "sap.xs.nodejs.project/service/NodejsLauncher"
			},
			"nodejsTestRunnerPart": {
				"implements": "sap.xs.nodejs.project.service.runner.nodejsTestRunnerPart",
				"module": "sap.xs.nodejs.project/service/runner/NodejsTestRunnerPart"
			},
			"nodejsProjectSettings": {
				"implements": "sap.watt.common.service.ui.Config",
				"module": "sap.xs.nodejs.project/service/settings/NodejsProjectSettings"
			}
		},
		"interfaces": {
			"sap.xs.nodejs.project.service.uriUtil": "sap.xs.nodejs.project/service/UriUtil",
			"sap.xs.nodejs.project.service.NodejsLauncher": "sap.xs.nodejs.project/service/NodejsLauncher",
			"sap.xs.nodejs.project.service.runner.nodejsTestRunnerPart": "sap.xs.nodejs.project/service/runner/NodejsTestRunnerPart",
			"sap.xs.nodejs.project.NodejsCoverageManager" : "sap.xs.nodejs.project/service/NodejsCoverageManager"

		}
	},
	"configures": {
		"services": {
			"projectsetting:plugins": [
				{
					"id": "sap.xs.nodejs.project.settings",
					"name": "Node.js Settings",
					"title": "Node.js Settings",
					"description": "Setup Node.js parameters",
					"service": "@nodejsProjectSettings",
					"projectTypes": [
						"sap.nodejs"
					]
				}
			],
			"run:runners": [
				{
					"id": "sap.xs.nodejs.project.nodejsRunnerApplication",
					"service": "@nodejsRunnerApplication",
					"displayName": "Node.js Application",
					"projectTypesIds": [
						"sap.nodejs"
					],
					"windowTarget": "nodejs_preview",
					"fileTypes": [
						"package.json"
					],
					"registerRunConsole": true,
					"appCacheBuster": false
				},
				{
					"id": "sap.xs.nodejs.project.nodejsTestRunner",
					"service": "@nodejsRunnerTest",
					"displayName": "Node.js Test",
					"projectTypesIds": [
						"sap.nodejs"
					],
					"windowTarget": "nodejs_preview",
					"fileTypes": [
						"package.json"
					],
					"registerRunConsole": true,
					"appCacheBuster": false
				}
			],
			"template:templates": [
				{
					"id": "sap.xs.nodejs.project.template.xsjs",
					"template": "sap.xs.nodejs.project/template/NodejsXsjsProjectTemplate",
					"name": "{i18n>plugin.template.sapHanaXsjs.name_xfld}",
					"description": "{i18n>plugin.template.sapHanaXsjs.description_xtol}",
					"path": "sap.xs.nodejs.project/template",
					"fileName": "",
					"modelFileName": "NodejsXsjsProjectModel.json",
					"modelRoot": "nodejsXsjsProject",
					"icon": "sap-icon://attachment-photo",
					"internalOnly": false,
					"category": "HANA.Templates",
					"requiresNeoApp": false,
					"wizardSteps": [
						"templateCustomizationStep"
					],
					"supportedProjectTypes": [
						"mta"
					],
					"targetProjectTypes": [
						"sap.nodejs"
					],
					"templateType": "module",
					"version": "1.0.0",
					"orderPriority": 999,
					"coreTemplate": true
				}
			],
			"command:commands": [
				{
					"id": "sap.xs.nodejs.project.command.openFile",
					"label": "{i18n>command_openFile_xmit}",
					"service": "sap.xs.nodejs.project/command/OpenFileCommand"
				},
				{
					"id": "sap.xs.nodejs.project.command.sortColumnAsc",
					"label": "{i18n>command_sortAscending_xmit}",
					"service": "sap.xs.nodejs.project/command/SortColumnAscCommand"
				},
				{
					"id": "sap.xs.nodejs.project.command.sortColumnDes",
					"label": "{i18n>command_sortDescending_xmit}",
					"service": "sap.xs.nodejs.project/command/SortColumnDesCommand"
				},
				{
					"id": "sap.xs.nodejs.project.command.testRunnerPartToggle",
					"label": "{i18n>command_openTestResultPane_xmit}",
					"service": {
						"implements": "sap.watt.common.service.ide.AbstractUIPartToggler",
						"module": "sap.watt.common.perspective/command/AbstractUIPartToggler",
						"configuration": {
							"id": "sap.xs.nodejs.project.command.testRunnerPartToggle",
							"service": "@nodejsTestRunnerPart",
							"perspective": "development"
						}
					},
					"icon": "sap-icon://x-ray",
					"available": true,
					"type": "boolean",
					"value": false
				}
			],
			"commandGroup:groups": [
				{
					"id": "sap.xs.nodejs.project.cmdGroup.test"
				},
				{
					"id": "sap.xs.nodejs.project.cmdGroup.coverage"
				},
				{
					"id": "sap.xs.nodejs.project.cmdGroup.start"
				},
				{
					"id": "sap.xs.nodejs.project.cmdGroup.sort"
				},
				{
					"id": "sap.xs.nodejs.project.cmdGroup.tools"
				}
			],
			"commandGroup:items": [
				{
					"parent": "sap.xs.nodejs.project.cmdGroup.start",
					"type": "action",
					"command": "sap.xs.nodejs.project.command.openFile",
					"prio": 2
				},
				{
					"parent": "sap.xs.nodejs.project.cmdGroup.sort",
					"type": "action",
					"command": "sap.xs.nodejs.project.command.sortColumnAsc",
					"prio": 2
				},
				{
					"parent": "sap.xs.nodejs.project.cmdGroup.sort",
					"type": "action",
					"command": "sap.xs.nodejs.project.command.sortColumnDes",
					"prio": 2
				},
				{
					"parent": "sap.xs.nodejs.project.cmdGroup.coverage",
					"type":"inline",
					"group":"sap.xs.nodejs.project.cmdGroup.start",
					"prio": 2
				},
				{
					"parent": "sap.xs.nodejs.project.cmdGroup.coverage",
					"type":"inline",
					"group":"sap.xs.nodejs.project.cmdGroup.sort",
					"prio": 2
				},
				{
					"parent": "sap.xs.nodejs.project.cmdGroup.test",
					"type":"inline",
					"group":"sap.xs.nodejs.project.cmdGroup.start",
					"prio": 2
				},
				{
					"parent": "run",
					"type": "inline",
					"group": "sap.xs.nodejs.project.cmdGroup.tools",
					"prio": 100
				},
				{
					"parent": "applicationRightSidebar",
					"command": "sap.xs.nodejs.project.command.testRunnerPartToggle",
					"label": "{i18n>testResultPane_pane_xtol}",
					"icon": "sap-icon://endoscopy",
					"prio": 999
				},
				{
					"parent": "view.otherPanes",
					"type": "action",
					"command": "sap.xs.nodejs.project.command.testRunnerPartToggle",
					"prio": 999
				}
			],
			"perspective:views": [
				{
					"id": "nodejsTestRunnerPart",
					"service": "@nodejsTestRunnerPart",
					"area": "right",
					"visible": "false",
					"cssclass": "nodejsTestRunnerPane splitterContainer"
				}
			],
			"builder:projectTypes": [
				{
					"projectTypeId": "sap.nodejs",
					"buildService": "sap.xs.nodejs.project/service/builder/NodejsBuilder"
				}
			]
		}
	},
	"subscribes": {
		"core:started": "initialize"
	}
}
