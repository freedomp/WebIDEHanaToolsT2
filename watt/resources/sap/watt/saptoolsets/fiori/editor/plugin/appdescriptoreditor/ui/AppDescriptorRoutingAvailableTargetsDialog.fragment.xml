<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.ui.commons">
	<Dialog  modal="true" resizable="false" title="{i18n>AppDescriptor_routing_addTarget}" closed="onTargetsDialogClose">
		<buttons>
			<Button text="{i18n>AppDescriptor_OK}" enabled="false"></Button>
			<Button press="onTargetstDialogCancel" text="{i18n>AppDescriptor_Cancel}"></Button>
		</buttons>
		<content>
			<layout:Grid vSpacing="0">
				<layout:content>
					<Label text="{i18n>AppDescriptor_routing_Target}">
						<layoutData>
							<layout:GridData span="L4 M6 S6"></layout:GridData>
						</layoutData>
					</Label>
					<ComboBox id="appDescriptorRoutingCombo" change="onComboTargetsChange" items="{/sap.ui5/properties/routing/properties/targets/aValues}" width="100%">
						<items>
							<core:ListItem key="{ parts:['item'], formatter: '.formatRoutingTargetsToText' }"
								text="{ parts:['item'], formatter: '.formatRoutingTargetsToText' }">
							</core:ListItem>
						</items>
						<layoutData>
							<layout:GridData span="L8 M6 S6"></layout:GridData>
						</layoutData>
					</ComboBox>
					</layout:content>
				<layout:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</layout:layoutData>
			</layout:Grid>
		</content>
	</Dialog>
</core:FragmentDefinition>