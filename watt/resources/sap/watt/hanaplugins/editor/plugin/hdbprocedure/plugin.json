{
    "name": "sap.watt.hana.editor.hdbprocedure",
    "description": "The hdbprocedure Editor Plugin",
    "module": "sap.watt.hana.editor.hdbprocedure/Plugin",
    "i18n": "sap.watt.hana.editor.hdbprocedure/i18n/i18n.hdbtextbundle",

    "requires": {
        "services": [
            "layout",
            "perspective",
            "document",
            "editor",
            "commandGroup",
            "system",
            "command",
            "content",
            "menuBar",
            "selection",
            "log",
            "console",
            "focus",
            "repositorybrowser",
            "filesystem.documentProvider",
            "intellisence",
            "aceeditor",
            "usernotification",
