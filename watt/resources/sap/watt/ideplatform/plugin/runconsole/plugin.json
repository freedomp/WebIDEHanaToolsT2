{
	"name": "sap.watt.ideplatform.runconsole",
	"description": "Run Console plugin",
	"i18n": "sap.watt.ideplatform.runconsole/i18n/i18n",
	"requires": {
		"services": [
			"perspective",
			"command",
			"commandGroup",
			"resource",
			"content",
			"log",
			"selection",
			"repositorybrowser",
			"filesystem.documentProvider",
			"runRegistry"
		]
	},
	"provides": {
		"services": {
			"runconsole": {
				"implements": "sap.watt.ideplatform.runconsole.RunConsole",
				"module": "sap.watt.ideplatform.runconsole/service/RunConsole"
			}
		},
		"interfaces": {
			"sap.watt.ideplatform.runconsole.RunConsole": "sap.watt.ideplatform.runconsole/service/RunConsole"
		}
	},
	"configures": {
		"services": {
			"perspective:views": [{
				"id": "runconsole",
				"service": "@runconsole",
				"area": "center_bottom",
				"visible": "false"
			}],
			"runconsole:styles": [{
				"uri": "sap.watt.ideplatform.runconsole/css/runconsole.css"
			}],
			"runconsole:targets": ["run"],
			"runconsole:projectTypes": [
				"sap.html5",
				"sap.hdb",
				"sap.nodejs"
			],
			"runconsole:format": "$TIME ($TAG) $MESSAGE",
			"runconsole:maxLineCount": 1000000,
			"commandGroup:groups": [{
				"id": "view.runconsole"
			}],
			"commandGroup:items": [{
				"parent": "view.console",
				"command": "runconsole.open",
				"prio": 20
			}],
			"command:commands": [{
				"id": "runconsole.open",
				"service": "sap.watt.ideplatform.runconsole/command/openRunConsole",
				"label": "{i18n>run_console_command_open_run_console}",
				"keyBinding": "ctrl+alt+r",
				"type": "action"
			}]
		}
	},
	"subscribes": {
		"log:changed": "runconsole:onLoggerEvent",
		"selection:changed": "runconsole:onSelectionEvent",
		"document:deleted": "runconsole:onDeletedDocument",
		"runRegistry:runProgress": "runconsole:onRunStatusChange"
	}
}