{
    "name": "sap.watt.common.plugin.progress.service.Progress",
    "description": "The Progress Service",
    "extends" : ["sap.watt.common.service.ui.Part"],
    "methods" : {
        "startTask": {
            "descriptions" : "Starts the progress animation. Returns a generated unique id to use when calling stopTask",
            "params": [
                {
                    "name": "taskName",
                    "type": "string"
                },
                {
                    "name": "taskDescription",
                    "type": "string"
                }
            ],
            "returns" : {
                "type" : "number"
            }
        },
        "stopTask": {
            "descriptions" : "Stops the progress animation of the task with taskId",
            "params": [
                {
                    "name": "taskId",
                    "type": "number"
                }
            ]
        }
    }
}
