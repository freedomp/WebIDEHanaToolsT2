<core:FragmentDefinition xmlns="sap.ui.commons" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
	<Dialog title="{i18n>importFileDialog_import}" resizable="false" width="600px" modal="true">
		<content>
			<l:Grid vSpacing="1">
				<l:content>
					
					<!-- first row of controls -->
					<Label text="{i18n>importFileDialog_file}" wrapping="false" required="true">
						<layoutData>
      						<l:GridData span="L2 M2 S2"/>
    					</layoutData>
					</Label>
					<u:FileUploader change="onBrowse" width="100%" maximumFileSize="20" placeholder="{i18n>import_select_file}" sendXHR="true" uploadOnChange="true">
						<u:layoutData>
							<l:GridData span="L10 M10 S10"/>
						</u:layoutData>
					</u:FileUploader>
					
					<!-- second row of controls -->
					<Label text="{i18n>importFileDialog_importto}" wrapping="false" required="true">
						<layoutData>
      						<l:GridData span="L2 M2 S2"/>
    					</layoutData>
					</Label>
					<TextField value="{/importDestinationPath}" tooltip="{/importDestinationPath}" editable="{/editableImportTo}" liveChange="onDestinationPathLiveChange" width="100%">
						<layoutData>
      						<l:GridData span="L6 M6 S6"/>
    					</layoutData>
					</TextField>
					<Button text="{/workspaceButtonText}" press="onWorkspace" width="100%">
						<layoutData>
      						<l:GridData span="L4 M4 S4"/>
    					</layoutData>
					</Button>
					
					<!-- third row of controls -->
					<CheckBox text="{i18n>extract_archive}" checked="{/extractArchiveChecked}" visible="{/extractArchiveVisible}" change="onExtractArchiveChange">
					    <layoutData>
      						<l:GridData span="L12 M12 S12"/>
    					</layoutData>
					</CheckBox>
				</l:content>
				<l:layoutData>
					<l:GridData span="L12 M12 S12"/>
				</l:layoutData>
			</l:Grid>
		</content>
		<buttons>
			<Button text="{i18n>importFileDialog_ok}" enabled="{/okEnabled}" press="onOk"/>
			<Button text="{i18n>importFileDialog_cancel}" press="onCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>