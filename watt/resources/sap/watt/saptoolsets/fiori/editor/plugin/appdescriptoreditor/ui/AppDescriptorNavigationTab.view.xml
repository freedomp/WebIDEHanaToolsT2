<mvc:View controllerName="sap.watt.saptoolsets.fiori.editor.plugin.appdescriptoreditor.ui.AppDescriptorNavigationTab"
	xmlns:appDescriptorUI="sap.watt.saptoolsets.fiori.editor.plugin.appdescriptoreditor.ui" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:table="sap.ui.table" xmlns:unified="sap.ui.unified"
	xmlns="sap.ui.commons" xmlns:mvc="sap.ui.core.mvc">
	<layout:Grid vSpacing="0">
		<!--contentNavigationGrid-->
		<layout:Grid class="sapIDEAppDescriptorGrid sapIDEAPPDescriptorTile" id="contentNavigationGrid" vSpacing="0" visible="{= !${AppDescriptorUI>/bSapAppVersion1_1_0}}">
			<layout:content>
				<form:Form>
					<form:formContainers>
						<!--*****************Intent Table container********************-->
						<form:FormContainer id="appDescriptor-navigation-intentTable">
							<form:layoutData>
								<layout:GridData linebreak="true" span="L9 M9 S9"/>
							</form:layoutData>
							<form:formElements>
								<!--Table-->
								<form:FormElement>
									<table:Table id="appDescriptorIntentTable" rowSelectionChange="onIntentChange"
										rows="{/sap.app/properties/crossNavigation/properties/inbounds/aTiles}" selectionBehavior="RowOnly" selectionMode="Single"
										visibleRowCount="3">
										<table:title></table:title>
										<table:toolbar>
											<Toolbar>
												<rightItems>
													<Button class="riverControlSmall" icon="sap-icon://add" press="onInsertRowPress"></Button>
													<Button class="riverControlSmall" icon="sap-icon://less" press="onRemoveRowPress"></Button>
												</rightItems>
												<!-- sap.ui.commons.ToolbarItem -->
											</Toolbar>
										</table:toolbar>
										<table:layoutData>
											<layout:GridData linebreak="true" span="L9 M9 S9"/>
										</table:layoutData>
										<table:columns>
											<table:Column>
												<Label required="true" text="{i18n>AppDescriptor_intent_sematicObject}"></Label>
												<table:template>
													<TextField change="onIntentSemanticObjectChange" required="true" value="{semanticObject}" tooltip="{i18n>AppDescriptor_Navigation_SemanticObject_tooltip}"></TextField>
												</table:template>
											</table:Column>
											<table:Column>
												<Label required="true" text="{i18n>AppDescriptor_intent_action}"></Label>
												<table:template>
													<TextField change="onIntentActionChange" required="true" value="{action}" tooltip="{i18n>AppDescriptor_Navigation_Action_tooltip}"></TextField>
												</table:template>
											</table:Column>
										</table:columns>
									</table:Table>
								</form:FormElement>
							</form:formElements>
							<form:title>
								<core:Title design="Bold" text="{i18n>AppDescriptor_intent}"></core:Title>
							</form:title>
						</form:FormContainer>
					</form:formContainers>
					<form:layout>
						<form:ResponsiveGridLayout></form:ResponsiveGridLayout>
					</form:layout>
					<!-- the size of the form in the grid-->
					<form:layoutData>
						<layout:GridData span="L9 M9 S9"/>
					</form:layoutData>
				</form:Form>
				<form:Form id="tileDetails">
					<form:formContainers>
						<!--****************Intent Tile header only container********************-->
						<form:FormContainer>
							<form:layoutData>
								<layout:GridData span="L9 M9 S9"/>
							</form:layoutData>
							<form:title>
								<core:Title design="Bold" text="{i18n>AppDescriptor_intentGeneral}"></core:Title>
							</form:title>
						</form:FormContainer>
						<!--*****************Intent General details container********************-->
						<form:FormContainer>
							<form:layoutData>
								<layout:GridData linebreak="true" span="L4 M6 S12"/>
							</form:layoutData>
							<form:formElements>
								<!--Title-->
								<form:FormElement>
									<form:label>
										<Label id="intentTitle" text="{i18n>AppDescriptor_intentGeneral_title}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<TextField name="title" change="onGeneralIntentTitleChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" value="{title}" 
										width="100%" tooltip="{i18n>AppDescriptor_Navigation_Intent_Title_tooltip}">
											<layoutData>
												<layout:GridData span="L9 M9 S6"/>
											</layoutData>
										</TextField>
									</form:fields>
								</form:FormElement>
								<!--Subtitle-->
								<form:FormElement>
									<form:label>
										<Label text="{i18n>AppDescriptor_intentGeneral_subtitle}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<TextField name="subtitle" change="onGeneralIntentSubtitleChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" value="{subTitle}" width="100%" 
										tooltip="{i18n>AppDescriptor_Navigation_Intent_subTitle_tooltip}">
											<layoutData>
												<layout:GridData span="L9 M9 S6"/>
											</layoutData>
										</TextField>
									</form:fields>
								</form:FormElement>
								<!--Icon-->
								<form:FormElement>
									<form:label>
										<Label text="{i18n>AppDescriptor_intentGeneral_icon}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<ValueHelpField name="icon" change="onIntentIconChange" class="sapIDEButtonSerchHelp" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}"
											iconURL="sap-icon://value-help" value="{icon}" valueHelpRequest="onIntentIconValueHelpRequest" width="100%"
											tooltip="{i18n>AppDescriptor_Navigation_Intent_Icon_tooltip}">
											<layoutData>
												<layout:GridData span="L9 M9 S6"/>
											</layoutData>
										</ValueHelpField>
									</form:fields>
								</form:FormElement>
							</form:formElements>
						</form:FormContainer>
						<!--*****************Tile Preview details container********************-->
						<form:FormContainer>
							<form:layoutData>
								<layout:GridData span="L4 M6 S12"/>
							</form:layoutData>
							<form:formElements>
								<form:FormElement xmlns:customTile="sap.watt.saptoolsets.fiori.editor.plugin.appdescriptoreditor.ui">
									<form:label>
										<Label text="Tile Preview" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<customTile:CustomTile>
										<customTile:title class="customTileText">
											<Label text="{title}" wrapping="true"></Label>
										</customTile:title>
										<customTile:subtitle class="customTileText">
											<Label text="{subTitle}" width="100%" wrapping="true"></Label>
										</customTile:subtitle>
										<customTile:icon class="customTileIcon">
											<Button enabled="false" icon="{icon}" lite="true">
												<layoutData>
													<layout:GridData linebreak="true"/>
												</layoutData>
											</Button>
										</customTile:icon>
									</customTile:CustomTile>
								</form:FormElement>
							</form:formElements>
						</form:FormContainer>
						<!--*****************Intent Dynamic details container********************-->
						<form:FormContainer>
							<form:layoutData>
								<layout:GridData linebreak="true" span="L4 M6 S12"/>
							</form:layoutData>
							<form:formElements>
								<!--Data Source-->
								<form:FormElement>
									<form:label>
										<Label text="{i18n>AppDescriptor_intentDynamic_dataSource}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<TextField name="data_source" change="onIntentDataSourceChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" value="{indicatorDataSource/dataSource}"
											width="100%" tooltip="{i18n>AppDescriptor_Navigation_Intent_DatSource_tooltip}">
											<layoutData>
												<layout:GridData span="L9 M9 S6"/>
											</layoutData>
										</TextField>
									</form:fields>
								</form:FormElement>
								<!--Path-->
								<form:FormElement>
									<form:label>
										<Label text="{i18n>AppDescriptor_intentDynamic_path}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<TextField name="path" change="onIntentPathChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" value="{indicatorDataSource/path}" width="100%"
										tooltip="{i18n>AppDescriptor_Navigation_Intent_Path_tooltip}">
											<layoutData>
												<layout:GridData span="L9 M9 S6"/>
											</layoutData>
										</TextField>
									</form:fields>
								</form:FormElement>
								<!--Refresh Interval (Sec)-->
								<form:FormElement>
									<form:label>
										<Label text="{i18n>AppDescriptor_intentDynamic_refreshInterval}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<TextField name="refresh_interval" change="onIntentRefreshIntervalChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" value="{indicatorDataSource/refresh}"
											width="100%" tooltip="{i18n>AppDescriptor_Navigation_Intent_RefreshInterval_tooltip}">
											<layoutData>
												<layout:GridData span="L9 M9 S6"/>
											</layoutData>
										</TextField>
									</form:fields>
								</form:FormElement>
								<form:FormElement>
									<form:label>
										<Label text="" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
								</form:FormElement>
							</form:formElements>
						</form:FormContainer>
						<!--****************Intent parameters container********************-->
						<form:FormContainer>
							<form:layoutData>
								<layout:GridData span="L9 M9 S9"/>
							</form:layoutData>
							<form:formElements>
								<!--Table-->
								<form:FormElement>
									<table:Table cellClick="onIntentParamsCellClick" id="appDescriptorIntentTableParams" rows="{signature/parameters}"
										selectionBehavior="RowOnly" selectionMode="Single" visibleRowCount="3">
										<table:title/>
										<table:toolbar>
											<Toolbar>
												<rightItems>
													<Button class="riverControlSmall" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" icon="sap-icon://add" press="onInsertParamRowPress"></Button>
													<Button class="riverControlSmall" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}" icon="sap-icon://less" press="onRemoveParamRowPress"></Button>
												</rightItems>
											</Toolbar>
										</table:toolbar>
										<table:layoutData>
											<layout:GridData span="L9 M9 S9"/>
										</table:layoutData>
										<table:columns>
											<table:Column>
												<Label required="true" text="{i18n>AppDescriptor_intentParameters_Name}"></Label>
												<table:template>
													<TextField change="onIntentParamsNameChange" required="true" value="{Name}" tooltip="{i18n>AppDescriptor_intentParameters_Name_tooltip}"></TextField>
												</table:template>
											</table:Column>
											<table:Column>
												<Label text="{i18n>AppDescriptor_intentParameters_Value}"></Label>
												<table:template>
													<TextField change="onIntentDefaultValueValueChange" value="{defaultValue/value}" tooltip="{i18n>AppDescriptor_intentParameters_Value_tooltip}"></TextField>
												</table:template>
											</table:Column>
											<table:Column>
												<Label text="{i18n>AppDescriptor_intentParameters_ValueFormat}"></Label>
												<table:template>
													<DropdownBox change="onIntentDefaultValueFormatChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}"
														items="{/sap.app/properties/crossNavigation/properties/inbounds/aTilesValueFormatmConvertedEnum}" selectedKey="{defaultValue/format}"
														width="100%" tooltip="{i18n>AppDescriptor_intentParameters_ValueFormat_tooltip}">
														<items>
															<core:ListItem key="{key}" text="{text}"></core:ListItem>
														</items>
													</DropdownBox>
												</table:template>
											</table:Column>
											<table:Column>
												<Label text="{i18n>AppDescriptor_intentParameters_Mandatory}"></Label>
												<table:template>
													<CheckBox change="onIntentParamsMandatoryChange" checked="{required}"></CheckBox>
												</table:template>
											</table:Column>
											<table:Column>
												<Label text="{i18n>AppDescriptor_intentParameters_FilterValue}"></Label>
												<table:template>
													<TextField change="onIntentParamsFilterValueChange" value="{filter/value}" tooltip="{i18n>AppDescriptor_intentParameters_FilterValue_tooltip}"></TextField>
												</table:template>
											</table:Column>
											<table:Column>
												<Label text="{i18n>AppDescriptor_intentParameters_FilterFormat}"></Label>
												<table:template>
													<DropdownBox change="onIntentFilterFormatChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}"
														items="{/sap.app/properties/crossNavigation/properties/inbounds/aTilesFilterValuemConvertedEnum}" selectedKey="{filter/format}" width="100%"
														tooltip="{i18n>AppDescriptor_intentParameters_FilterFormat_tooltip}">
														<items>
															<core:ListItem key="{key}" text="{text}"></core:ListItem>
														</items>
													</DropdownBox>
												</table:template>
											</table:Column>
										</table:columns>
									</table:Table>
								</form:FormElement>
							</form:formElements>
							<form:title>
								<core:Title design="Bold" text="{i18n>AppDescriptor_intentParameters}"></core:Title>
							</form:title>
						</form:FormContainer>
						<!--*****************Intent AvailableParams container********************-->
						<form:FormContainer>
							<form:layoutData>
								<layout:GridData linebreak="true" span="L4 M6 S12"/>
							</form:layoutData>
							<form:formElements>
								<!--Allow additional-->
								<form:FormElement>
									<form:label>
										<Label text="{i18n>AppDescriptor_intentGeneral_add}" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L6 M6 S6"/>
											</layoutData>
										</Label>
									</form:label>
									<form:fields>
										<DropdownBox name="additional_parameters" change="onIntentAdditionalParamsChange" enabled="{AppDescriptorUI>/navigationTab/intentDetailsEnabled}"
											items="{/sap.app/properties/crossNavigation/properties/inbounds/aTilesAllowAddmConvertedEnum}"
											selectedKey="{signature/additionalParameters}" width="100%" tooltip="{i18n>AppDescriptor_Navigation_Additional_Paramteres_tooltip}">
											<items>
												<core:ListItem key="{key}" text="{text}"></core:ListItem>
											</items>
											<layoutData>
												<layout:GridData span="L6 M6 S6"/>
											</layoutData>
										</DropdownBox>
									</form:fields>
								</form:FormElement>
								<form:FormElement>
									<form:label>
										<Label text="" wrapping="false">
											<layoutData>
												<layout:GridData linebreak="true" span="L3 M3 S6"/>
											</layoutData>
										</Label>
									</form:label>
								</form:FormElement>
							</form:formElements>
						</form:FormContainer>
					</form:formContainers>
					<!--<form:title></form:title>-->
					<form:layout>
						<form:ResponsiveGridLayout></form:ResponsiveGridLayout>
					</form:layout>
					<!-- the size of the form in the grid-->
					<form:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</form:layoutData>
				</form:Form>
			</layout:content>
			<layout:layoutData>
				<layout:GridData span="L12 M12 S12"/>
			</layout:layoutData>
		</layout:Grid>
		<!--Error grid-->
		<layout:Grid id="errorNavigationGrid" visible="{AppDescriptorUI>/bSapAppVersion1_1_0}" vSpacing="0">
			<layout:content>
				<TextView text="{i18n>AppDescriptor_navigation_schema}" textAlign="Center" wrapping="true">
					<layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</layoutData>
				</TextView>
			</layout:content>
			<layout:layoutData>
				<layout:GridData span="L12 M12 S12"/>
			</layout:layoutData>
		</layout:Grid>
	</layout:Grid>
</mvc:View>