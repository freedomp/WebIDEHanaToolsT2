<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Popover
    showHeader="false"
    contentWidth="320px"
    contentHeight="500px"
     >
      <Page
        title="Messages">
        <List
          items="{message>/}" >
          <StandardListItem
            title="{message>type}"
            description="{message>message}"
            type="Active"
            iconDensityAware="false"
            iconInset="false" />
        </List>
      </Page>
  </Popover>
</core:FragmentDefinition>