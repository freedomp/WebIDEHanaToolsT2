{
    "name": "sap.hana.ide.editor.editors.xshttpdest",
    "description": "The XS HTTP Destination Editor Plugin",
    "module": "sap.hana.ide.editor.editors.xshttpdest/Plugin",
    "version": "0.6.0-SNAPSHOT",
    "scm-revision": "51fca7e06a400bbbd9207d20c9b35da441426560",

    "requires": {
        "services": [
            "layout",
            "perspective",
            "document",
            "editor",
            "commandGroup",
            "system",
            "command",
            "content",
            "menuBar",
            "selection",
            "log",
            "console",
            "focus",
            "repositorybrowser",
            "filesystem.documentProvider",
            "aceeditor"
        ]
    },

    "configures": {

        "services": {

            "command:commands": [{
                "id": "editor.dynamic.maintainDestinationCredentials",
                "service": "sap.hana.ide.editor.editors.xshttpdest/command/MaintainCredentials",
                "label": "Maintain Credentials",
                "windowTarget":"_blank",
                "icon": "/sap/hana/ide/common/images/creds.gif"
            }, {
                "id": "editor.dynamic.insertXShttpdestSnippet",
                "service": "sap.hana.ide.editor.editors.xshttpdest/command/InsertSnippet",
                "label": "Insert snippet",
                "icon": "sap-icon://attachment-html"
            }],

            "commandGroup:items": [{
                    "parent": "applicationToolbar",
                    "command": "editor.dynamic.insertXShttpdestSnippet",
                    "type": "action",
                    "prio": 3000
                }, {
                    "parent": "editor.dynamic",
                    "command": "editor.dynamic.maintainDestinationCredentials",
                    "prio": 30
                }, {
				    "parent":"commonContextMenu",
				    "command":"editor.dynamic.insertXShttpdestSnippet",
				    "prio" : 1
			    }
            ],
            "aceeditor:modes": [{
                "type": "xshttpdest",
                "description": "XS HTTP Destination",
                "extension": "xshttpdest"
            }]

        }

    },

    "subscribes": {
        "core:started":"initialize"
    }

}