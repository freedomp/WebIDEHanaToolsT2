<mvc:View
	controllerName="{{rtXMLTemplate.parameters.ProjectNamespace.value}}.view.Main"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	 xmlns:form="sap.ui.layout.form"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<VBox class="layoutStyle" >
		<template:with path="meta>entityType" helper="sap.ui.model.odata.AnnotationHelper.gotoEntityType" var="entityType">

			<template:if test="{entityType>com.sap.vocabularies.UI.v1.LineItem}">
    			<template:with path="entityType>com.sap.vocabularies.UI.v1.HeaderInfo">
    			    <Title text="{path: 'entityType>TypeNamePlural', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}" />
    			</template:with>
    			<!-- Note: this limits the data shown to 7 rows! -->
				<Table id="mainTable" ShowOverlay="true" mode="SingleSelect" includeItemInSelection="true" selectionChange="onRowSelectionChange"
						items="{= '{path:\'/' + ${meta>name} + '\', length: 7}' }">
					
					<template:with path="entityType>com.sap.vocabularies.UI.v1.LineItem" var="target">
						<core:Fragment fragmentName="{{rtXMLTemplate.parameters.ProjectNamespace.value}}.view.Table" type="XML"/>
					</template:with>
				</Table>
			</template:if>
		</template:with>
	</VBox>
</mvc:View>