{
    "name": "sap.watt.common.plugin.run.service.runner",
    "methods" : {
        "createDefaultConfiguration" : {
            "description" : "Creates the default configuration to run",
            "params" : [
                {
                    "name" : "document",
                    "type" : "sap.watt.common.plugin.document.Document"
                },
                {
                    "name" : "isRunConfigurationFlow",
                    "type" : "boolean"
                },
                {
                    "name" : "sWindowId",
                    "type" : "string"
                }
            ],
            "returns" : {
                "type": "object",
                "description": "The contextual configuration to run or set in configuration UI"
            }
        },
        "run" : {
            "description" : "Run the configurations",
            "params" : [
                {
                    "name" : "configuration",
                    "type" : "object"
                }
            ]
        },
        "getConfigurationUi" : {
            "description" : "Optional if the runner wants to show a configuration view in the run configuration screen",
            "returns" : {
                "type": "object",
                "description": "members of the returned object: getContent(oDocument) - returns the UI element to show in the configuration  , setConfiguarion(configuration) - sets the data in configuration object in the UI, getConfiguration() - returns the data the user enterend in the configuration"
            }

        },
        "isConfigurationValid" : {
            "description" : "Validates run configuration",
            "params" : [
                {
                    "name" : "oConfiguration",
                    "type" : "object"
                },
                {
                    "name" : "oDocumnet",
                    "type" : "[sap.watt.common.plugin.document.Document]"
                }
            ],
            "returns" : {
                "type": "boolean",
                "default" : true,
                "description": "true - if a configuration is valid, otherwise - false"
            }
        }
    }
}
