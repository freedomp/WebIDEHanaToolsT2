{
	"name": "sap.watt.saptoolsets.fiori.editor.appdescriptoreditor",
	"description": "The App Descriptor Editor Plugin",
	"i18n": "sap.watt.saptoolsets.fiori.editor.appdescriptoreditor/i18n/i18n",

	"requires": {
		"services": [
			"editor",
			"resource",
			"aceeditor",
			"multiEditorFactory",
			"aceEditorFactory",
			"fioriSchemaProvider",
			"beautifierProcessor",
			"ui5icons",
			"repositoryBrowserFactory",
			"repositorybrowser",
			"usernotification",
			"usagemonitoring"
		]
	},

	"provides": {
		"services": {
			"aceeditorinstance": {
				"implements": "sap.watt.common.plugin.aceeditor.service.Editor",
				"factory": "aceEditorFactory"
			},
			"appdescriptoreditor": {
				"implements": "sap.watt.saptoolsets.fiori.editor.plugin.appdescriptoreditor.service.AppDescriptorEditor",
				"module": "sap.watt.saptoolsets.fiori.editor.appdescriptoreditor/service/AppDescriptorEditor"
			},
			"appdescriptorMulti": {
				"implements": "sap.watt.common.plugin.multieditor.service.MultiEditor",
				"factory": "multiEditorFactory"
			}
		},
		"interfaces": {
			"sap.watt.saptoolsets.fiori.editor.plugin.appdescriptoreditor.service.AppDescriptorEditor": "sap.watt.saptoolsets.fiori.editor.appdescriptoreditor/service/AppDescriptorEditor"
		}

	},
	"configures": {
		"services": {
			"appdescriptoreditor:styles": [{
				"uri": "sap.watt.saptoolsets.fiori.editor.appdescriptoreditor/css/AppDescriptor.css"
			}, {
				"uri": "sap.watt.saptoolsets.fiori.editor.appdescriptoreditor/css/CustomTile.css"
			}],
			"appdescriptorMulti:editors": [{
				"name": "{i18n>AppDescriptor_Descriptor_Editor}",
				"service": "@appdescriptoreditor"
			}, {
				"name": "{i18n>Appdescripto_Code_Editor}",
				"service": "@aceeditorinstance"
			}],
			"appdescriptoreditor:repositoryBrowserExtensionFilters": ["png", "jpeg", "bmp", "gif", "jpg"],
			"editor:editors": [{
				"fileExtension": [
					"manifest.json"
				],
				"service": "@appdescriptorMulti",
				"name": "App Descriptor Editor",
				"id": "appdescriptorEditor"
			}],
			"editor:defaultEditors": [{
				"extention": "manifest.json",
				"editorId": "appdescriptorEditor"
			}],
			"aceeditorinstance:editorContextMenu": [{
				"extension": "json",
				"menuGroup": "jsonContextMenu"
			}],
			"aceeditorinstance:editorGutterContextMenu": [{
				"extension": "json",
				"menuGroup": "jsonGutterContextMenu"
			}],
			"aceeditorinstance:modes": [
				{
					"type":"json",
					"description":"JSON",
					"extension":"json"
				}
			],
			"usagemonitoring:reportParams": [{
				"components": ["appDescriptor"],
				"eventTypes": ["tab_select"]
			}]
		}
	},
	"subscribes": {

	}
}